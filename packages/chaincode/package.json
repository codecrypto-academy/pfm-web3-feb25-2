{
  "name": "chainode",
  "version": "1.0.0",
  "description": "Chaincode con contratos ping y calculadora",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "watch": "tsc -w",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "start": "tsc && nodemon --exec 'fabric-chaincode-node server --chaincode-address=$CHAINCODE_SERVER_ADDRESS --chaincode-id=$CHAINCODE_ID' --watch src --ext ts"
  },
  "dependencies": {
    "ethers": "^6.13.5",
    "fabric-contract-api": "^2.5.2",
    "fabric-shim": "^2.5.2"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.2.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  }
}
